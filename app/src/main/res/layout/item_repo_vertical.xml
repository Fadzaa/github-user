<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Body.Follow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:id="@+id/ivFork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fork"
        android:contentDescription="@string/ic_fork"
        app:layout_constraintStart_toEndOf="@id/tvLanguage"
        app:layout_constraintTop_toTopOf="@id/tvLanguage"
        app:layout_constraintBottom_toBottomOf="@id/tvLanguage"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tvFork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelSmall"
        app:layout_constraintStart_toEndOf="@id/ivFork"
        app:layout_constraintTop_toTopOf="@id/tvLanguage"
        app:layout_constraintBottom_toBottomOf="@id/tvLanguage"
        android:layout_marginStart="5dp"

        />

    <ImageView
        android:id="@+id/ivStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        android:contentDescription="@string/ic_stargazers"
        app:layout_constraintStart_toEndOf="@id/tvFork"
        app:layout_constraintTop_toTopOf="@id/tvLanguage"
        app:layout_constraintBottom_toBottomOf="@id/tvLanguage"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tvStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelSmall"
        app:layout_constraintStart_toEndOf="@id/ivStar"
        app:layout_constraintTop_toTopOf="@id/tvLanguage"
        app:layout_constraintBottom_toBottomOf="@id/tvLanguage"
        android:layout_marginStart="5dp"

        />

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/container_color"
        app:layout_constraintTop_toBottomOf="@id/tvLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>