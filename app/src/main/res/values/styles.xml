<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Heading">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="HeadingMedium">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="HeadingSmall">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_color</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey_light_color</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">9sp</item>
