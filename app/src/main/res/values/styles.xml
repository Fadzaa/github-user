    <style name="Body.Repo">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/green_color</item>
    </style>

    <style name="Body.Follow">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/grey_color</item>
    </style>

    <style name="Label">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/grey_light_color</item>
    </style>

    <style name="LabelSmall">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">6sp</item>
